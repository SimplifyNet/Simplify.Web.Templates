<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netcoreapp2.2</TargetFramework>

		<PackageType>Template</PackageType>
		<PackageVersion>0.3.1</PackageVersion>
		<PackageId>Simplify.Web.Templates</PackageId>
		<IsPackable>true</IsPackable>
		<PackageProjectUrl>https://github.com/i4004/Simplify.Web.Templates</PackageProjectUrl>
		<PackageIconUrl>https://raw.githubusercontent.com/i4004/Simplify.Web/master/Images/Icon.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/i4004/Simplify.Web.Templates</RepositoryUrl>
		<RepositoryType>GIT</RepositoryType>
		<PackageReleaseNotes>
			+ Angular template
			* Minor fixes
		</PackageReleaseNotes>
		<Title>Simplify.Web project templates</Title>
		<Authors>Alexander Krylkov</Authors>
		<Description>The Simplify.Web web framework project templates collection.</Description>
		<Tags>templates;simplify-web;web</Tags>

		<IncludeContentInPack>true</IncludeContentInPack>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<ContentTargetFolders>content</ContentTargetFolders>
	</PropertyGroup>
	<ItemGroup>
		<Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**" />
		<Compile Remove="**\*" />
	</ItemGroup>
</Project>